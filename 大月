        <div id="page3Container"></div>
    </div>

    <script>
        // 全域變數
        let otherItemCount = 0;
        const MAX_TIME_DAYS_PER_PAGE = 7; // 每頁最多顯示7天
        
        // 頁面載入時執行
        document.addEventListener('DOMContentLoaded', function() {
            // 設置當前日期
            setCurrentDate();
            
            // 初始化計算
            calculateAllHours();
            calculateAll();
            
            // 添加事件監聽器
            addEventListeners();
        });
        
        // 添加所有事件監聽器
        function addEventListeners() {
            // 主要按鈕
            document.getElementById('printBtn').addEventListener('click', printForm);
            document.getElementById('downloadPdfBtn').addEventListener('click', downloadPdf);
            document.getElementById('resetBtn').addEventListener('click', resetForm);
            document.getElementById('addOtherBtn').addEventListener('click', addOtherItem);
            document.getElementById('addTimeDayBtn').addEventListener('click', addTimeDay);
            document.getElementById('addLaborPersonBtn').addEventListener('click', addLaborPerson);
            
            // 計算時數按鈕
            document.querySelectorAll('.calc-hours-btn').forEach(button => {
                button.addEventListener('click', function() {
                    calculateHours(this);
                });
            });
            
            // 刪除勞報人員按鈕
            document.querySelectorAll('.remove-labor-btn').forEach(button => {
                button.addEventListener('click', function() {
                    removeLaborPerson(this);
                });
            });
            
            // 時間輸入欄位變更事件 - 自動計算時數
            document.querySelectorAll('.time-day input').forEach(input => {
                if (!input.classList.contains('total-hours') && !input.classList.contains('overtime-hours')) {
                    input.addEventListener('input', function() {
                        const calcBtn = this.closest('.time-day').querySelector('.calc-hours-btn');
                        calculateHours(calcBtn);
                    });
                }
            });
        }
        
        // 設置當前日期
        function setCurrentDate() {
            const now = new Date();
            // 設置民國年
            const rocYear = now.getFullYear() - 1911;
            document.getElementById('invoiceYear').value = rocYear;
            document.getElementById('invoiceMonth').value = now.getMonth() + 1;
            document.getElementById('invoiceDay').value = now.getDate();
        }
        
        // 計算所有天數的工作時數
        function calculateAllHours() {
            document.querySelectorAll('.calc-hours-btn').forEach(button => {
                calculateHours(button);
            });
        }
        
        // 計算工作時數和加班時數
        function calculateHours(button) {
            const dayDiv = button.closest('.time-day');
            const startHour = parseInt(dayDiv.querySelector('.start-hour').value) || 0;
            const startMinute = parseInt(dayDiv.querySelector('.start-minute').value) || 0;
            const endHour = parseInt(dayDiv.querySelector('.end-hour').value) || 0;
            const endMinute = parseInt(dayDiv.querySelector('.end-minute').value) || 0;
            
            // 計算總分鐘數
            let totalMinutes = (endHour * 60 + endMinute) - (startHour * 60 + startMinute);
            if (totalMinutes < 0) totalMinutes += 24 * 60; // 跨日處理
            
            // 轉換為小時，四捨五入到0.5小時
            const totalHours = Math.round(totalMinutes / 30) / 2;
            
            // 計算加班時數 (超過8小時的部分)
            const overtimeHours = Math.max(0, totalHours - 8);
            
            // 更新顯示
            dayDiv.querySelector('.total-hours').value = totalHours;
            dayDiv.querySelector('.overtime-hours').value = overtimeHours;
            
            // 更新加班總時數
            updateOvertimeTotal();
        }
        
        // 更新加班總時數
        function updateOvertimeTotal() {
            let totalOvertime = 0;
            document.querySelectorAll('.overtime-hours').forEach(input => {
                totalOvertime += parseFloat(input.value) || 0;
            });
            
            document.getElementById('overtimeQty').value = totalOvertime;
            calculateAll();
        }
        
        // 新增時間天數
        function addTimeDay() {
            // 獲取當前天數
            const allTimeDays = document.querySelectorAll('.time-day');
            const dayCount = allTimeDays.length + 1;
            
            // 決定添加到哪個容器
            let container;
            if (dayCount <= MAX_TIME_DAYS_PER_PAGE) {
                container = document.getElementById('timeInfoContainer');
            } else {
                // 確保第三頁存在
                ensurePage3Exists();
                container = document.getElementById('timeInfoContainer3');
            }
            
            const dayDiv = document.createElement('div');
            dayDiv.className = 'time-day mb-4 pb-4 border-b border-gray-200';
            
            dayDiv.innerHTML = `
                <div class="flex justify-between items-center mb-3">
                    <h4 class="font-medium text-blue-800">第${dayCount}天:</h4>
                    <button class="remove-time-btn bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded-lg text-xs transition duration-200 no-print">刪除</button>
                </div>
                <div class="flex items-center flex-wrap gap-1">
                    <input type="number" class="time-input border rounded px-1 py-1 start-year" value="114">
                    <span class="time-label">年</span>
                    
                    <input type="number" class="time-input border rounded px-1 py-1 start-month" min="1" max="12" value="">
                    <span class="time-label">月</span>
                    
                    <input type="number" class="time-input border rounded px-1 py-1 start-day" min="1" max="31" value="">
                    <span class="time-label">日</span>
                    
                    <input type="number" class="time-input border rounded px-1 py-1 start-hour" min="0" max="23" value="">
                    <span class="time-label">時</span>
                    
                    <input type="number" class="time-input border rounded px-1 py-1 start-minute" min="0" max="59" value="">
                    <span class="time-label">分</span>
                    
                    <span class="mx-2">至</span>
                    
                    <input type="number" class="time-input border rounded px-1 py-1 end-hour" min="0" max="23" value="">
                    <span class="time-label">時</span>
                    
                    <input type="number" class="time-input border rounded px-1 py-1 end-minute" min="0" max="59" value="">
                    <span class="time-label">分</span>
                    
                    <span class="mx-2">共計</span>
                    <input type="number" class="time-input border rounded px-1 py-1 total-hours" readonly value="">
                    <span class="time-label">小時</span>
                    
                    <span class="mx-2">加班</span>
                    <input type="number" class="time-input border rounded px-1 py-1 overtime-hours" readonly value="">
                    <span class="time-label">小時</span>
                    
                    <button class="calc-hours-btn ml-2 bg-gray-200 hover:bg-gray-300 text-gray-800 px-2 py-1 rounded text-xs no-print">計算</button>
                </div>
            `;
            
            container.appendChild(dayDiv);
            
            // 添加事件監聽器
            const calcBtn = dayDiv.querySelector('.calc-hours-btn');
            calcBtn.addEventListener('click', function() {
                calculateHours(this);
            });
            
            const removeBtn = dayDiv.querySelector('.remove-time-btn');
            removeBtn.addEventListener('click', function() {
                removeTimeDay(this);
            });
            
            // 時間輸入欄位變更事件 - 自動計算時數
            dayDiv.querySelectorAll('input').forEach(input => {
                if (!input.classList.contains('total-hours') && !input.classList.contains('overtime-hours')) {
                    input.addEventListener('input', function() {
                        calculateHours(calcBtn);
                    });
                }
            });
            
            // 檢查是否需要移動勞報表到第三頁
            checkLaborReportPlacement();
        }
        
        // 刪除時間天數
        function removeTimeDay(button) {
            const dayDiv = button.closest('.time-day');
            const isPage3 = dayDiv.closest('#timeInfoContainer3') !== null;
            dayDiv.remove();
            
            // 重新編號所有天數
            renumberAllDays();
            
            // 檢查是否需要將第三頁的第一個時間項移回第二頁
            reorganizeTimeDays();
            
            // 更新加班總時數
            updateOvertimeTotal();
            
            // 檢查勞報表的位置
            checkLaborReportPlacement();
        }
        
        // 重新編號所有天數
        function renumberAllDays() {
            const allDays = document.querySelectorAll('.time-day');
            allDays.forEach((day, index) => {
                const heading = day.querySelector('h4');
                if (heading) {
                    heading.textContent = `第${index + 1}天:`;
                }
            });
        }
        
        // 重新組織時間天數，確保第二頁有最多7個
        function reorganizeTimeDays() {
            const page2Days = document.querySelectorAll('#timeInfoContainer .time-day');
            const page3Days = document.querySelectorAll('#timeInfoContainer3 .time-day');
            
            // 如果第二頁少於7個且第三頁有項目，則移動第三頁的第一個到第二頁
            if (page2Days.length < MAX_TIME_DAYS_PER_PAGE && page3Days.length > 0) {
                const firstPage3Day = page3Days[0];
                document.getElementById('timeInfoContainer').appendChild(firstPage3Day);
                
                // 如果第三頁沒有更多項目，可以考慮移除第三頁
                if (page3Days.length === 1) {
                    // 檢查第三頁是否還有其他內容
                    const laborContainer3 = document.getElementById('laborReportContainer3');
                    if (!laborContainer3 || laborContainer3.children.length === 0) {
                        document.getElementById('page3Container').innerHTML = '';
                    }
                }
            }
        }
        
        // 檢查勞報表的位置
        function checkLaborReportPlacement() {
            const timeDays = document.querySelectorAll('#timeInfoContainer .time-day');
            
            // 如果時間天數超過2天，將勞報表移至第三頁
            if (timeDays.length > 2) {
                moveLaborsToPage3();
            } else {
                // 否則，將勞報表移回第二頁
                moveLaborsToPage2();
            }
        }
        
        // 將勞報表移至第三頁
        function moveLaborsToPage3() {
            ensurePage3Exists();
            
            const laborSection = document.getElementById('laborReportSection');
            const laborContainer = document.getElementById('laborReportContainer');
            const laborContainer3 = document.getElementById('laborReportContainer3');
            
            // 如果勞報表在第二頁，移至第三頁
            if (laborSection && laborSection.parentNode.id !== 'page3Content') {
                // 將所有勞報人員移至第三頁
                const laborPersons = Array.from(laborContainer.querySelectorAll('.labor-person'));
                
                // 清空第三頁的勞報容器
                laborContainer3.innerHTML = '';
                
                // 將所有人員移至第三頁
                laborPersons.forEach(person => {
                    const clonedPerson = person.cloneNode(true);
                    laborContainer3.appendChild(clonedPerson);
                    
                    // 添加刪除按鈕事件監聽器
                    const removeBtn = clonedPerson.querySelector('.remove-labor-btn');
                    if (removeBtn) {
                        removeBtn.addEventListener('click', function() {
                            removeLaborPerson(this);
                        });
                    }
                });
                
                // 隱藏第二頁的勞報區域
                laborSection.style.display = 'none';
            }
        }
        
        // 將勞報表移回第二頁
        function moveLaborsToPage2() {
            const laborSection = document.getElementById('laborReportSection');
            const laborContainer = document.getElementById('laborReportContainer');
            const laborContainer3 = document.getElementById('laborReportContainer3');
            
            // 如果第三頁存在且有勞報表
            if (laborContainer3 && laborContainer3.children.length > 0) {
                // 將所有勞報人員移回第二頁
                const laborPersons = Array.from(laborContainer3.querySelectorAll('.labor-person'));
                
                // 清空第二頁的勞報容器
                laborContainer.innerHTML = '';
                
                // 將所有人員移回第二頁
                laborPersons.forEach(person => {
                    const clonedPerson = person.cloneNode(true);
                    laborContainer.appendChild(clonedPerson);
                    
                    // 添加刪除按鈕事件監聽器
                    const removeBtn = clonedPerson.querySelector('.remove-labor-btn');
                    if (removeBtn) {
                        removeBtn.addEventListener('click', function() {
                            removeLaborPerson(this);
                        });
                    }
                });
                
                // 顯示第二頁的勞報區域
                if (laborSection) {
                    laborSection.style.display = '';
                }
            }
        }
        
        // 確保第三頁存在
        function ensurePage3Exists() {
            const container = document.getElementById('page3Container');
            
            // 檢查是否已經有第三頁
            let page3 = document.getElementById('page3');
            if (!page3) {
                // 創建新的第三頁
                container.innerHTML = `
                    <div id="page3" class="a4-page mb-8 print-break">
                        <!-- 黑底白字標題 -->
                        <div class="header">
                            <div class="header-left">
                                <h1 class="text-2xl font-bold">LUMASONIX x PROFESSIONAL</h1>
                                <p class="text-sm">專業技術支援 x 人力媒合行銷</p>
                            </div>
                            <div class="header-right">
                                <h2 class="text-xl font-bold">人員勞報請款</h2>
                            </div>
                        </div>
                        
                        <!-- 內容區域 -->
                        <div id="page3Content" class="p-6">
                            <!-- 基本資訊與聯絡資訊 - 左右對稱 -->
                            <div class="mb-6">
                                <div class="grid grid-cols-2 gap-6">
                                    <!-- 左側欄位 -->
                                    <div class="space-y-4">
                                        <div class="flex items-center">
                                            <label class="text-gray-700 mr-2 w-20">請款日期:</label>
                                            <input type="number" class="date-input" id="invoiceYear3" min="1" max="999">
                                            <span class="mx-1">年</span>
                                            <input type="number" class="date-input" id="invoiceMonth3" min="1" max="12">
                                            <span class="mx-1">月</span>
                                            <input type="number" class="date-input" id="invoiceDay3" min="1" max="31">
                                            <span class="mx-1">日</span>
                                        </div>
                                        <div class="flex items-center">
                                            <label class="text-gray-700 mr-2 w-20">廠商名稱:</label>
                                            <input type="text" id="vendorName3" class="text-input flex-1" placeholder="">
                                        </div>
                                        <div class="flex items-center">
                                            <label class="text-gray-700 mr-2 w-20">活動地點:</label>
                                            <input type="text" id="eventLocation3" class="text-input flex-1" placeholder="">
                                        </div>
                                    </div>
                                    
                                    <!-- 右側欄位 -->
                                    <div class="space-y-4">
                                        <div class="flex items-center">
                                            <label class="text-gray-700 mr-2 w-20">連絡電話:</label>
                                            <input type="text" id="contactPhone3" class="text-input flex-1" value="0926169899">
                                        </div>
                                        <div class="flex items-center">
                                            <label class="text-gray-700 mr-2 w-20">負責人:</label>
                                            <input type="text" id="contactPerson3" class="text-input flex-1" value="蘇裕庭">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- 分隔線 -->
                            <div class="section-divider"></div>
                            
                            <!-- 時間資訊 (續) -->
                            <div id="timeInfoSection3" class="mb-6" style="display: none;">
                                <h3 class="text-lg font-semibold text-blue-700 mb-4">時間資訊 (續)</h3>
                                <div id="timeInfoContainer3"></div>
                            </div>
                            
                            <!-- 分隔線 -->
                            <div id="timeDivider3" class="section-divider" style="display: none;"></div>
                            
                            <!-- 勞報資料檢附 (續) -->
                            <div id="laborReportSection3" class="mb-8">
                                <div class="flex justify-between items-center mb-4">
                                    <h3 class="text-lg font-semibold text-blue-700">勞報復檢表</h3>
                                    <button id="addLaborPersonBtn3" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-lg text-sm transition duration-200 no-print">+ 新增人員</button>
                                </div>
                                
                                <div id="laborReportContainer3">
                                    <!-- 動態添加的人員將移至此處 -->
                                </div>
                            </div>
                            
                            <!-- 頁尾 -->
                            <div class="footer">
                                LUMASONIX x PROFESSIONAL 專業技術支援 x 人力媒合行銷 | 聯絡電話: 0926169899
                            </div>
                        </div>
                    </div>
                `;
                
                // 同步第一頁的基本資訊到第三頁
                document.getElementById('invoiceYear3').value = document.getElementById('invoiceYear').value;
                document.getElementById('invoiceMonth3').value = document.getElementById('invoiceMonth').value;
                document.getElementById('invoiceDay3').value = document.getElementById('invoiceDay').value;
                document.getElementById('vendorName3').value = document.getElementById('vendorName').value;
                document.getElementById('eventLocation3').value = document.getElementById('eventLocation').value;
                
                // 添加第三頁的新增人員按鈕事件
                document.getElementById('addLaborPersonBtn3').addEventListener('click', addLaborPersonToPage3);
            }
            
            // 如果有超過7天的時間資訊，顯示第三頁的時間區域
            const allTimeDays = document.querySelectorAll('.time-day');
            if (allTimeDays.length > MAX_TIME_DAYS_PER_PAGE) {
                document.getElementById('timeInfoSection3').style.display = '';
                document.getElementById('timeDivider3').style.display = '';
            }
        }
        
        // 新增其他項目
        function addOtherItem() {
            otherItemCount++;
            const table = document.getElementById('supportItemsTable');
            const newRow = table.insertRow(table.rows.length - 1); // 在行政執行費前插入
            newRow.className = 'border-b border-gray-200';
            
            const itemId = `other${otherItemCount}`;
            
            newRow.innerHTML = `
                <td class="px-4 py-3">
                    <input type="text" id="${itemId}Name" class="w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="項目名稱">
                </td>
                <td class="px-4 py-3">
                    <input type="number" id="${itemId}Qty" class="w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-center" value="0" min="0" oninput="calculateAll()">
                </td>
                <td class="px-4 py-3">
                    <input type="number" id="${itemId}Price" class="w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-center" value="0" min="0" oninput="calculateAll()">
                </td>
                <td class="px-4 py-3">
                    <input type="text" id="${itemId}Desc" class="w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="工作內容描述">
                </td>
                <td class="px-4 py-3 text-center" id="${itemId}Subtotal">0</td>
            `;
            
            calculateAll();
        }
        
        // 計算所有金額
        function calculateAll() {
            // 計算各項小計
            const staffQty = parseInt(document.getElementById('staffQty').value) || 0;
            const techQty = parseInt(document.getElementById('techQty').value) || 0;
            const spotlightQty = parseInt(document.getElementById('spotlightQty').value) || 0;
            const heightQty = parseInt(document.getElementById('heightQty').value) || 0;
            const overtimeQty = parseFloat(document.getElementById('overtimeQty').value) || 0;
            
            const staffSubtotal = staffQty * 3000;
            const techSubtotal = techQty * 1000;
            const spotlightSubtotal = spotlightQty * 1000;
            const heightSubtotal = heightQty * 1000;
            const overtimeSubtotal = overtimeQty * 350;
            
            // 更新小計顯示
            document.getElementById('staffSubtotal').textContent = formatNumber(staffSubtotal);
            document.getElementById('techSubtotal').textContent = formatNumber(techSubtotal);
            document.getElementById('spotlightSubtotal').textContent = formatNumber(spotlightSubtotal);
            document.getElementById('heightSubtotal').textContent = formatNumber(heightSubtotal);
            document.getElementById('overtimeSubtotal').textContent = formatNumber(overtimeSubtotal);
            
            // 計算行政執行費 (人事支援 x 10%)
            const adminFee = staffSubtotal * 0.1;
            document.getElementById('adminSubtotal').textContent = formatNumber(adminFee);
            
            // 計算其他項目總額
            let otherTotal = 0;
            for (let i = 1; i <= otherItemCount; i++) {
                const itemId = `other${i}`;
                const qtyElement = document.getElementById(`${itemId}Qty`);
                const priceElement = document.getElementById(`${itemId}Price`);
                const subtotalElement = document.getElementById(`${itemId}Subtotal`);
                
                if (qtyElement && priceElement && subtotalElement) {
                    const qty = parseInt(qtyElement.value) || 0;
                    const price = parseInt(priceElement.value) || 0;
                    const itemSubtotal = qty * price;
                    subtotalElement.textContent = formatNumber(itemSubtotal);
                    otherTotal += itemSubtotal;
                }
            }
            
            // 計算總金額
            const subtotal = staffSubtotal + techSubtotal + spotlightSubtotal + heightSubtotal + overtimeSubtotal + adminFee + otherTotal;
            document.getElementById('subtotalAmount').textContent = 'NT$' + formatNumber(subtotal);
            document.getElementById('totalAmount').textContent = 'NT$' + formatNumber(subtotal);
        }
        
        // 格式化數字為千分位
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }
        
        // 新增勞報人員
        function addLaborPerson() {
            // 檢查勞報表應該在哪一頁
            const timeDays = document.querySelectorAll('#timeInfoContainer .time-day');
            
            if (timeDays.length > 2) {
                // 如果時間天數超過2天，勞報表應該在第三頁
                addLaborPersonToPage3();
            } else {
                // 否則，勞報表在第二頁
                addLaborPersonToPage2();
            }
        }
        
        // 新增勞報人員到第二頁
        function addLaborPersonToPage2() {
            const container = document.getElementById('laborReportContainer');
            addLaborPersonToContainer(container);
        }
        
        // 新增勞報人員到第三頁
        function addLaborPersonToPage3() {
            ensurePage3Exists();
            const container = document.getElementById('laborReportContainer3');
            addLaborPersonToContainer(container);
        }
        
        // 新增勞報人員到指定容器
        function addLaborPersonToContainer(container) {
            const personDiv = document.createElement('div');
            personDiv.className = 'labor-person mb-6 p-4 bg-gray-50 rounded-lg';
            
            personDiv.innerHTML = `
                <div class="grid grid-cols-4 gap-4 mb-4">
                    <div>
                        <label class="block text-gray-700 mb-1">姓名</label>
                        <input type="text" class="labor-name w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="請輸入姓名">
                    </div>
                    <div>
                        <label class="block text-gray-700 mb-1">生日</label>
                        <input type="text" class="labor-birth w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="例：1990/01/01">
                    </div>
                    <div>
                        <label class="block text-gray-700 mb-1">身分證</label>
                        <input type="text" class="labor-id w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="請輸入身分證字號">
                    </div>
                    <div>
                        <label class="block text-gray-700 mb-1">聯絡電話</label>
                        <input type="text" class="labor-phone w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="請輸入電話">
                    </div>
                </div>
                <div class="flex items-center mb-2">
                    <div class="flex-grow">
                        <label class="block text-gray-700 mb-1">戶籍地址</label>
                        <input type="text" class="labor-address w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="戶籍地址">
                    </div>
                    <div class="ml-4 w-32">
                        <label class="block text-gray-700 mb-1">勞報金額</label>
                        <div class="flex items-center">
                            <input type="number" class="labor-amount w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="金額">
                            <span class="ml-1">元</span>
                        </div>
                    </div>
                    <div class="ml-2 no-print">
                        <button class="remove-labor-btn bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded-lg text-xs transition duration-200 mt-6">刪除</button>
                    </div>
                </div>
            `;
            
            container.appendChild(personDiv);
            
            // 添加刪除按鈕事件監聽器
            const removeBtn = personDiv.querySelector('.remove-labor-btn');
            removeBtn.addEventListener('click', function() {
                removeLaborPerson(this);
            });
        }
        
        // 刪除勞報人員
        function removeLaborPerson(button) {
            const personDiv = button.closest('.labor-person');
            personDiv.remove();
        }
        
        // 列印表單
        function printForm() {
            // 同步第一頁的基本資訊到第三頁
            if (document.getElementById('invoiceYear3')) {
                document.getElementById('invoiceYear3').value = document.getElementById('invoiceYear').value;
                document.getElementById('invoiceMonth3').value = document.getElementById('invoiceMonth').value;
                document.getElementById('invoiceDay3').value = document.getElementById('invoiceDay').value;
                document.getElementById('vendorName3').value = document.getElementById('vendorName').value;
                document.getElementById('eventLocation3').value = document.getElementById('eventLocation').value;
            }
            
            window.print();
        }
        
        // 下載為PDF
        function downloadPdf() {
            // 同步第一頁的基本資訊到第三頁
            if (document.getElementById('invoiceYear3')) {
                document.getElementById('invoiceYear3').value = document.getElementById('invoiceYear').value;
                document.getElementById('invoiceMonth3').value = document.getElementById('invoiceMonth').value;
                document.getElementById('invoiceDay3').value = document.getElementById('invoiceDay').value;
                document.getElementById('vendorName3').value = document.getElementById('vendorName').value;
                document.getElementById('eventLocation3').value = document.getElementById('eventLocation').value;
            }
            
            // 暫時隱藏按鈕
            const buttons = document.querySelectorAll('.no-print');
            buttons.forEach(button => {
                button.style.display = 'none';
            });
            
            const element = document.getElementById('invoice-content');
            const opt = {
                margin: 0,
                filename: 'LUMASONIX人員勞報請款單.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            
            // 生成PDF
            html2pdf().set(opt).from(element).save().then(() => {
                // 恢復按鈕顯示
                buttons.forEach(button => {
                    button.style.display = '';
                });
            });
        }
        
        // 重置表單
        function resetForm() {
            if (confirm('確定要重置表單嗎？所有已輸入的資料將被清除。')) {
                location.reload();
            }
        }
    </script>
