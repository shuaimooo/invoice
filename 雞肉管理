            mobileMenu.classList.toggle('hidden');
        });

        // 銷售趨勢圖表
        const trendCtx = document.getElementById('trend-chart').getContext('2d');
        const trendChart = new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: ['1月', '2月', '3月', '4月', '5月', '6月'],
                datasets: [
                    {
